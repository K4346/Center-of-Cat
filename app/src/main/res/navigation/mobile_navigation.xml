<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.centerofcat.ui.catList.CatsListFragment"
        android:label="@string/title_cats"
        tools:layout="@layout/fragment_cat_list" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_detail"
            app:destination="@id/navigation_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.centerofcat.ui.catFavourites.FavouritesCatsFragment"
        android:label="@string/title_favorites"
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_detail"
            app:destination="@id/navigation_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.centerofcat.ui.loadCat.LoadCatFragment"
        android:label="@string/title_load"
        tools:layout="@layout/fragment_load" />

    <fragment
        android:id="@+id/navigation_detail"
        android:name="com.example.centerofcat.ui.detailCatInfo.DetailCatInfoFragment"
        android:label="Информация о Котике"
        tools:layout="@layout/fragment_load" >
        <action
            android:id="@+id/action_navigation_detail_to_navigation_home2"
            app:destination="@id/navigation_home" />
        <action
            android:id="@+id/action_navigation_detail_to_navigation_dashboard2"
            app:destination="@id/navigation_dashboard" />
    </fragment>

</navigation>